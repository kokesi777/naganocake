<div class="containa">
    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-6">
            <h3>配送先編集</h3>
                <div class="row">
                    <div class="col-xs-2">
                        <%= form_for(@address, url: address_path(@address.id)) do |f| %>
                            <label>郵便番号</label><br>
                            <label>住所</label><br>
                            <label>宛名</label><br>
                    </div>
                    <div class="col-xs-5">
                        <%= f.text_field :post_code %> <br>
                        <%= f.text_field :address, size: "50" %><br>
                        <%= f.text_field :name %><br>
                    </div>
                    <div class="col-xs-5">
                    <br><br><br><br>
                        <%= f.submit '編集する', class: "btn btn-success" %>
                    </div>
            </div>
        </div>
        <div class="col-xs-4">
        </div>
        <% end %>
    </div>
</div>

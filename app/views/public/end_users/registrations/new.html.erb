<div class="containa">
<div class="row">
    <div class="col-xs-4"></div>
    <div class="col-xs-6">  
 
      <h4>新規会員登録</h4>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/end_users/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :名前 %>
            <%= f.label :（姓） %><%= f.text_field :last_name, autofocus: true, autocomplete: "姓" %>
            <%= f.label :（名） %><%= f.text_field :first_name, autofocus: true, autocomplete: "名" %>
          </div>
          <div class="field">
            <%= f.label :フリガナ %>
            <%= f.label :（セイ） %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "姓カナ" %>
            <%= f.label :（メイ） %><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "名カナ" %>
          </div>
          <div class="field">
            <%= f.label :メールアドレス %>
            <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
          </div>
          <div class="field">
            <%= f.label :郵便番号（ハイフンなし） %>
            <%= f.text_field :post_code, autofocus: true, autocomplete: "郵便番号" %>
          </div>
          <div class="field">
            <%= f.label :住所 %>
            <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
          </div>
          <div class="field">
            <%= f.label :電話番号 %>
            <%= f.text_field :telephone_number, autofocus: true, autocomplete: "電話番号" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :パスワード（確認用） %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録" %>
          </div>
        <% end %>
        <br />

        <h4>既に登録済みの方</h4>
        <%= link_to "こちら", new_session_path(resource_name) %>よりログインしてください<br />
        <%= render "public/end_users/shared/links" %>


    </div>
    <div class="col-xs-4"></div>
  </dvi>
</dvi>

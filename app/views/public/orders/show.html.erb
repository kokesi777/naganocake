<div class="containa">
<div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-10">
        <h3>注文履歴詳細</h3>
        <div class="row">
            <div class="col-xs-8">
                <strong>注文情報</strong>
                <table class="table table-bordered">
                    <thead>
                        <tr class="active">
                            <th>注文日</th>
                            <th>配送先</th>
                            <th>支払方法</th>
                            <th>ステータス</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
                            <td><%= @order.post_code %><br>
                                <%= @order.address %><br>
                                <%= @order.name %></td>
                            <td><%= @order.payment_method %></td>
                            <td><%= @order.status %></td>
                            
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="col-xs-3">
                <strong>請求情報</strong>
                <table class="table table-bordered">
                    <tr>
                        <td class="active">商品合計</th>
                        <td><%= @sum %></td>
                    </tr>
                    <tr>
                        <td class="active">配送料</td>
                        <td>800</td>
                    </tr>
                    <tr>
                        <td class="active">ご請求金額</td>
                        <td><%= @sum+800 %></td>
                    </tr>
                </table>
            </div>
            <div class="col-xs-1"></div>
        </div>


                <strong>注文内容</strong>
                <table class="table table-bordered">
                    <thead>
                        <tr class="active">
                            <th>商品</th>
                            <th>単価（税込）</th>
                            <th>個数</th>
                            <th>小計</th>
                        </tr>
                    </thead>
                    <tbody>
                   <% @order_details.each do |order_detail| %>
                        <tr>
                            <td><%= order_detail.item.name %></td>
                            <td><%= order_detail.price %></td>
                            <td><%= order_detail.amount %></td>
                            <td><%= @sum += (order_detail.price * order_detail.amount) %></td>
                        </tr>
                    <% end %>
                    </tbody>
                </table>



    </div>
    <div class="col-xs-1"></div>
</div>
</div>




<div class="containa">
    <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-10">
            
            <h4>注文情報入力</h4>
            <%= form_for(@order, url: orders_confirm_path) do |f| %>
                <h4>支払方法</h4>
                    <%= f.radio_button :payment_method, 0, checked: "checked" %><label>銀行振込</label>
                    <%= f.radio_button :payment_method, 1 %><label>クレジットカード</label>
                <br>
                <h4>お届け先</h4>
                    <%= f.radio_button :address, 0, checked: "checked" %><label>ご自身の住所</label><br>
                        <%= current_end_user.post_code %>
                        <%= current_end_user.address %><br>
                        <%= current_end_user.first_name %><%= current_end_user.last_name %>
                    <%= f.radio_button :address, 1 %><label>登録済住所から選択</label><br>
             
                    <br>
                    <%= f.radio_button :address, 2 %><label>新しいお届け先</label><br>
                            <label>郵便番号　</label><%= f.text_field :post_code %><br><br>
                            <label>住　　所　</label><%= f.text_field :address, size: "50" %><br><br>
                            <label>名　　前　</label><%= f.text_field :name %><br><br>
                            
                            
                <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
            <% end %>


            <p>Public::Orders#new</p>
            <p>Find me in app/views/public/orders/new.html.erb</p>
        </div>
        <div class="col-xs-1"></div>
    </div>
</dvi>
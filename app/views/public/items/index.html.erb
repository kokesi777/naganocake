<h2>商品一覧</h2>
<table class="table">
        <thead class="active">
            <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜き価格</th>
                <th>ジャンル</th>
                <th>ステータス</th>
            </th>
        </thead>
        <tbody>
            <% @items.each do |item| %>
            <tr>
                <td><%= item.id %></td>
                <td><%= item.name %></td>
                <td><%= item.price %></td>
                <td><%= item.genre_id %></td>
                <td><%= item.is_active %></td>
            </tr>
            <% end %>
        </tbody>
    </table>


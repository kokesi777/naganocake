<div class="containa">
    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
        <h3>注文履歴一覧</h3>

        <table class="table">
            <thead>
                <tr class="active">
                    <th>購入日時</th>
                    <th>購入者</th>
                    <th>注文個数</th>
                    <th>注文ステータス</th>
                </tr>
            </thead>
        
            <% @orders.each do |order| %>
                <% @total_amount = 0 %>
                <% order.order_details.each do |order_detail| %>
                    <% @total_amount =+ order_detail.amount %>
                <% end %>
            <tbody>
                <tr>
                    <td><%= link_to order.created_at, admin_order_path(order) %></td>
                    <td><%= order.end_user.last_name + order.end_user.first_name %></td>
                    <td><%= @total_amount %></td>
                    <td><%= order.status %></td>
                </tr>
            </tbody>
             <% end %>
        </table>

        </div>
        <div class="col-xs-2"><div>
    </div>
</div>
        

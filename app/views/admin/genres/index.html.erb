<h2>ジャンル一覧・追加</h2>
<div>

<%= form_for(@genre, url: admin_genres_path) do |f| %>
    <label>ジャンル</label>
        <%= f.text_field :name %>
        <%= f.radio_button :is_active, "true", checked: "checked" %>
            <%= f.label :is_active, "有効" , value: true %>
        <%= f.radio_button :is_active, "false"%>
            <%= f.label :is_active, "無効" , value: false %>
        <%= f.submit "追加",  class: "btn btn-primary" %>  </p>
<% end %>
</div>

<div>  
<table class="table">
    <thead class="active">
        <tr>
            <th>id</th>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
        </th>
    </thead>
    <tbody>
    <% @genres.each do |genre| %>
        <tr>
            <td><%= genre.id %></td>
            <td><%= genre.name %></td>
            <% if genre.is_active %>
                <td>有効</td>
            <% else %>
                <td>無効</td>
            <% end %>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-info" %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<p>admin/genres#index</p>
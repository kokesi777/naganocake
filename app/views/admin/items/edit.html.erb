<div class="containa">
    <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-10">
        <h3>商品編集</h3>

                <div class="col-xs-4">
                    <%= form_for(@item, url: admin_item_path(@item.id)) do |f| %>
                        <%= f.attachment_field :image, class: "col-xs-8" %>
                </div>

                <div class="col-xs-2">
                    <p>商品名</p>
                    <p>説明</p>
                    <p>ジャンル</p>
                    <p>税抜き価格</p>
                    <p>販売ステータス</p>
                </div>

                <div class="col-xs-6">
                    <p><%= f.text_field :name, size: "50" %></p>
                    <p><%= f.text_area :introduction, size: "50" %></p>
                    <p><%= f.collection_select(:genre_id, Genre.all, :id, :name) %></p>
                    <p><%= f.text_field :price, size: "30"%></p>
                    <p><%= f.select :is_active, [["販売中","true"],["販売停止中"],["false"]], class: "col-xs-8" %></p>

                    <%= f.submit '変更を保存', class: "btn btn-success" %>
                    <% end %>
                </div>

        <div class="col-xs-1"></div>    
    </div>
</div>
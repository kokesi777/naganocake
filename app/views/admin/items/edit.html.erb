<div class="containa">

        <h3 class="titile">商品編集</h3>

    <div class="row">
        <div class="col-xs-3"></div>
        <div class="col-xs-3"></div>
        <div class="col-xs-6">
            <%= form_for(@item, url: admin_item_path(@item.id)) do |f| %>
                <label>商品名</label>
                    <%= f.text_field :name %><br>
                <label>商品説明</label>
                    <%= f.text_area :introduction %><br>
                <label>ジャンル</label>
                    <%= f.collection_select(:genre_id, Genre.all, :id, :name) %><br>       
                <label>税抜き価格</label>
                    <%= f.text_field :price %><br> 
                <label>販売ステータス</label>
                    <%= f.collection_select(:is_active, Genre.all, :id, :is_active) %><br> 

                <%= f.submit '編集する' %>
            <% end %>
        
        </div>
    </div>


<p>admin/items#edit</p>
</div>
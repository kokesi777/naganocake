<div class="containa">
    <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-10">
            <h3>商品詳細</h3>
                <div class="col-xs-3">
                    <%= attachment_image_tag @item, :image, size: "230x230", format: "jpeg", fallback: "no-image.png" %>
                </div>

                <div class="col-xs-2">
                    <p>商品名</p>
                    <p>説明</p>
                    <p>ジャンル</p>
                    <p>税抜き価格</p>
                    <p>販売ステータス</p>
                </div>

                <div class="col-xs-7">
                    <p><%= @item.name %></p>
                            <p><%= @item.introduction %></p>
                            <p><%= @item.genre.name %></p>
                            <p><%= @item.price %></p>
                            <p><% if @item.is_active %>
                                販売中
                                <% else %>
                                販売停止中
                                <% end %></p>
                </div>

                    <%= link_to "編集する", edit_admin_item_path, class: "btn btn-info" %>
                    <%= link_to "削除する", admin_item_path(@item), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に退会しますか？" %>
                        
        </div>
        <div class="col-xs-1"></div>
    </div>
</div>
    
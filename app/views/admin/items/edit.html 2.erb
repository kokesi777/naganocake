<div class="containa">
    <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-10">
        <h3>商品編集</h3>
            <div class="row">
                <div class="col-xs-3"></div>
                <div class="col-xs-6">
                    <%= form_for(@item, url: admin_item_path(@item.id)) do |f| %>
                        <label>商品名</label>
                            <%= f.text_field :name %><br>
                        <label>商品説明</label>
                            <%= f.text_area :introduction, size: "50" %><br>
                        <label>ジャンル</label>
                            <%= f.collection_select(:genre_id, Genre.all, :id, :name) %><br>       
                        <label>価格</label>
                            <%= f.text_field :price %><br> 
                        <label>販売ステータス</label>
                            <%= f.select :is_active,[["販売中", "true"], ["販売停止中", "flase"]] ,class: "col-xs-8" %><br> 

                        <%= f.submit '変更を保存' %>
                    <% end %>
                <div class="col-xs-3"></div>
            </div>

        <div class="col-xs-1"></div>    
    </div>
</div>